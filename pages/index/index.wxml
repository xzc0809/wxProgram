  <view wx:for="{{videoList}}" class="item-container">  

<!-- {{serverUrl}}{{item.coverPath}} -->

     <view style='width:{{screenWidth}}px;height:210px;' class='back-img'> 
        <image src="{{serverUrl}}{{item.coverPath}}" style='width:{{screenWidth}}px;height:210px;' mode="aspectFit" bindtap='showVideoInfo' data-arrindex='{{index}}'>{{index}}</image>
     </view> 


    <view class="desc">
        <view class="faceName">
        <!-- {{serverUrl}}{{item.faceImage}} -->
            <image class='myface' src="{{serverUrl}}{{item.faceImage}}"></image>
            <view class="nickname">{{item.nickname}}</view>
        </view>
    </view>
  

  </view>  